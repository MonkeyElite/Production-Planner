# ---------- deps (cached installs) ----------
FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json package-lock.json* yarn.lock* pnpm-lock.yaml* ./
RUN if [ -f pnpm-lock.yaml ]; then \
      npm i -g pnpm && pnpm install --frozen-lockfile; \
    elif [ -f yarn.lock ]; then \
      yarn install --frozen-lockfile; \
    else \
      npm ci; \
    fi

# ---------- build (needs dev deps) ----------
FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
# Build standalone server (.next/standalone + .next/static)
RUN npm run build || yarn build || (npm i -g pnpm && pnpm build)

# ---------- runtime (no node_modules copy) ----------
FROM node:20-alpine AS runner
RUN addgroup -g 10001 app \
    && adduser -S -D -H -u 10001 -G app app

WORKDIR /app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Copy the minimal standalone output
#  - server files with minimal node_modules baked in
#  - static assets
#  - public folder (if any)
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static
COPY --from=builder /app/public ./public

RUN chown -R app:app /app
USER app

EXPOSE 3000
# Standalone server entrypoint generated by Next.js
CMD ["node", "server.js"]