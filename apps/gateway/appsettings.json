{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://web:3000" ]
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "products-route": {
        "Match": { "Path": "/api/products/{**catch-all}" },
        "ClusterId": "products",
        "Transforms": [
          { "RequestHeaderOriginalHost": "true" },
          { "X-Forwarded": "Append" }
        ]
      }
    },
    "Clusters": {
      "products": {
        "Destinations": {
          "d1": { "Address": "http://products-api:8080/" }
        }
      }
    }
  },
  "Jwt": {
    "Authority": "https://keycloak.example.com/realms/production",
    "Audience": "gateway"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": { "Url": "http://0.0.0.0:8080" }
    }
  }
}
