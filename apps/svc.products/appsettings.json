{
  "ConnectionStrings": {
    "ProductsDb": "Host=postgres;Port=5432;Database=${PGDATABASE:-products};Username=${PGUSER:-products};Password=${PGPASSWORD:-products}",
    "DefaultConnection": "Host=postgres;Port=5432;Database=${PGDATABASE:-products};Username=${PGUSER:-products};Password=${PGPASSWORD:-products}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": { "AllowedOrigins": [ "http://localhost:3000", "http://web:3000", "http://localhost:8080", "http://gateway:8080" ] },
  "Jwt": {
    "Authority": "https://keycloak:8082/realms/production",
    "Issuer": "https://keycloak:8082/realms/production",
    "Audience": "gateway",
    "Audiences": [ "gateway" ],
    "ValidIssuers": [ "https://keycloak:8082/realms/production" ],
    "Algorithms": [ "RS256" ],
    "ClockSkewMinutes": 1
  }
}
